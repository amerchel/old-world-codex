generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id          Int       @id @default(autoincrement())
  name        String
  character   Character @relation(fields: [characterId], references: [id])
  characterId Int
  joinedAt    DateTime  @default(now())
}

model Character {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  school   String
  players  Player[]
}
